EXTRA_ARGS=$@


### Change this to point to the compilers you want to use
CXX=/opt/local/bin/g++-mp-4.8
CC=/opt/local/bin/gcc-mp-4.8
FC=/opt/local/bin/gfortran-mp-4.8

### Change this to point to the root of your SEACAS sources...
ACCESS=/Users/gdsjaar/src/seacas.git

### Change this to regenerate the flex and bison files for aprepro and aprepro_lib
### May have to touch aprepro.l aprepro.y aprepro.ll and aprepro.yy to have them regenerate
#-D GENERATE_FLEX_FILES=ON \
#-D GENERATE_BISON_FILES=ON \

TPL=${ACCESS}
INSTALL=${ACCESS}
MPI=OFF

rm -f CMakeCache.txt

### You can add these below if you want more verbosity...
#-D SEACAS_VERBOSE_CONFIGURE=ON \
#-D CMAKE_VERBOSE_MAKEFILE:BOOL=ON \


cmake  \
-D SEACAS_ENABLE_ALL_PACKAGES:BOOL=ON \
-D CMAKE_INSTALL_PREFIX:PATH=${INSTALL} \
-D BUILD_SHARED_LIBS:BOOL=OFF \
-D CMAKE_CXX_COMPILER:FILEPATH=${CXX} \
-D CMAKE_C_COMPILER:FILEPATH=${CC} \
-D CMAKE_Fortran_COMPILER:FILEPATH=${FC} \
-D TPL_ENABLE_HDF5:BOOL=ON \
-D TPL_ENABLE_Netcdf:BOOL=ON \
-D TPL_ENABLE_Matio:BOOL=ON \
-D TPL_ENABLE_MPI=${MPI} \
-D TPL_ENABLE_Pamgen=OFF \
\
-D NetCDF_DIR:PATH=${TPL} \
-D HDF5_ROOT:PATH=${TPL} \
-D HDF5_NO_SYSTEM_PATHS=ON \
\
-D Matio_LIBRARY_DIRS:PATH=${TPL}/lib \
-D TPL_Matio_INCLUDE_DIRS:PATH=${TPL}/include \
\
-D TPL_X11_INCLUDE_DIRS:PATH=/usr/X11R6/include \
-D SEACAS_SKIP_FORTRANCINTERFACE_VERIFY_TEST:BOOL=ON \
$EXTRA_ARGS \
../



