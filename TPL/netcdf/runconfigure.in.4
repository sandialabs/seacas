#! /bin/sh
rm -f config.cache
LIBRARYSUBDIR=lib; export LIBRARYSUBDIR
CC='$(CC)'; export CC
CFLAGS='-I../libsrc $(CFLAGS) $(PICFLAGS)'; export CFLAGS
CXX='$(CXX)'; export CXX
CXXFLAGS='-I../libsrc $(CXXFLAGS) $(PICFLAGS)'; export CXXFLAGS
CPPFLAGS='-DNDEBUG'; export CPPFLAGS
AR_FLAGS='$(ARFLAGS)'; export AR_FLAGS
LDFLAGS='$(LDOPTIONS) $(EXTRA_LDOPTIONS)'; export LDFLAGS

### SEACAS does not use the Fortran or F90 versions of netcdf library
FC=''; export FC
F90=''; export F90
 
./configure --disable-netcdf-4 --disable-f77 --disable-f90 $(SHARED) $(PARALLEL_TESTS) --prefix $(PROJECTROOT) --libdir $(SHLIBDIR) --disable-fsync --disable-cdmremote --disable-dap $1
